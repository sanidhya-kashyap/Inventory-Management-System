{% unless template == 'index' or template == 'cart' or template == 'list-collections' or template == '404' %}

{% assign t = template | split: '.' | first %}

<nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs">
  <ol>
    <li>
      <a href="/" title="Home">Home</a>
    </li>

  {% case t %}
  {% when 'page' %}

    <li>
      {{ page.title }}
    </li>

  {% when 'product' %}

    {% if collection.url %}
      <li>
        {{ collection.title | link_to: collection.url }}
      </li>
    {% endif %}

    {%- liquid
	assign collection_handle = product.metafields.artform.artfrom_name | downcase | replace: ' ','-'
    assign collection_url = collections[collection_handle].url
    -%}
    {% if product.metafields.artform.artfrom_name != blank %}
      <li>
        <a href="https:{{collection_url }}"> {{product.metafields.artform.artfrom_name | capitalize}} </a>
      </li>
    {% endif %}

    <li>
      {{ product.title }}
    </li>

  {% when 'collection' and collection.handle %}

    {% if current_tags %}
      <li>{{ collection.title | link_to: collection.url }}</li>
      <li>
        {% capture tag_url %}{{ collection.url }}/{{ current_tags | join: "+"}}{% endcapture %}
        {{ current_tags | join: " + "}}
      </li>
    {% else %}
      <li>
        {{ collection.title }}
      </li>
    {% endif %}

  {% when 'blog' %}

    {% if current_tags %}
      <li>{{ blog.title | link_to: blog.url }}</li>
      <li>
        {% capture tag_url %}{{blog.url}}/tagged/{{ current_tags | join: "+" }}{% endcapture %}
        {{ current_tags | join: " + " }}
      </li>
    {% else %}
      <li>
        {{ blog.title }}
      </li>
    {% endif %}


  {% when 'article' %}

    <li>{{ blog.title | link_to: blog.url }}</li>
    <li>
      {{ article.title }}
    </li>

  {% else %}

    <li aria-current="page">
      {{ page_title }}
    </li>

  {% endcase %}

  </ol>
</nav>

<!-- Mobile Breadcrumb-->
<nav class="mobile-breadcrumbs" role="navigation" aria-label="breadcrumbs">
<ol>
    <li>
      <a href="/" title="Home">Home</a>
    </li>

  {% case t %}
  {% when 'page' %}

    <li>
      <a href="{{ page.url }}" aria-current="page">{{ page.title }}</a>
    </li>

  {% when 'product' %}

    {% if collection.url %}
      <li>
        {{ collection.title | link_to: collection.url }}
      </li>
    {% endif %}
    {%- liquid
	assign collection_handle = product.metafields.artform.artfrom_name | downcase | replace: ' ','-'
    assign collection_url = collections[collection_handle].url
    -%}
    {% if product.metafields.artform.artfrom_name != blank %}
      <li>
        <a href="https:{{ collection_url }}"> {{product.metafields.artform.artfrom_name | capitalize}} </a>
      </li>
    {% endif %}


  {% when 'collection' and collection.handle %}

    {% if current_tags %}
      <li>{{ collection.title | link_to: collection.url }}</li>
      <li>
        {% capture tag_url %}{{ collection.url }}/{{ current_tags | join: "+"}}{% endcapture %}
        <a href="{{ tag_url }}" aria-current="page">{{ current_tags | join: " + "}}</a>
      </li>
    {% endif %}

  {% when 'blog' %}

    {% if current_tags %}
      <li>{{ blog.title | link_to: blog.url }}</li>
      <li>
        {% capture tag_url %}{{blog.url}}/tagged/{{ current_tags | join: "+" }}{% endcapture %}
        <a href="{{ tag_url }}" aria-current="page">{{ current_tags | join: " + " }}</a>
      </li>
    {% endif %}


  {% when 'article' %}

    <li>{{ blog.title | link_to: blog.url }}</li>
    <li>
      <a href="{{ article.url }}" aria-current="page">{{ article.title }}</a>
    </li>

  {% endcase %}

  </ol>
</nav>


<!-- Mobile Breadcrumb end -->

{% endunless %}



