{% comment %}                   {%- if collection_image -%}
                    <div class="collection__page-image desktop-3 mobile-3">
                      <img src="{{ collection.image | img_url: '350x' }}" alt="{{ collection.image.alt }}">
                    </div>
                  {%- endif -%} {% endcomment %}
                </div>
                
              {% endif %}

              {%- if show_sidebar -%}
              <div class="collection__page--sidebar mobile-sidebar {{ sidebar_grid }} lg-hide">
                <div class="slideout__trigger--open">
                  <button class="slideout__trigger-filters js-slideout-open" data-wau-slideout-target="collection-sidebar" data-slideout-direction="right" aria-label="Open filters" tabindex="0" type="button" name="button">
                    Filters
