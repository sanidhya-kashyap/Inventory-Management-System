                      {{ collection.description | remove: "[banner]" | strip_html | truncatewords: 25 }}&nbsp;<a style="color: #411e2f" href="#" onClick="
                        document.getElementById('truncated-desc').style.display = 'none';
                        document.getElementById('full-desc').style.display = 'inherit';"><b>Read More</b></a>
                    </div>
                    <div id="full-desc" style="display: none">
                      {{ collection.description | remove: "[banner]" | strip_html}}&nbsp;<a href="#" onClick="
                        document.getElementById('truncated-desc').style.display = 'inherit';
                        document.getElementById('full-desc').style.display = 'none';"><b>Show Less</b></a>
